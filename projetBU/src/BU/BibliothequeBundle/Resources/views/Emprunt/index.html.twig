{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des emprunts</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Utilisateur</th>
                <th>Livre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td><a href="{{ path('emprunt_show', { 'id': emprunt.id }) }}">{{ emprunt.id }}</a></td>
                <td>{% if emprunt.date %}{{ emprunt.date|date('d-m-Y') }}{% endif %}</td>
                <td>{{ emprunt.user }}</td>
                <td>{{ emprunt.exemplaireemprunt}}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('emprunt_show', { 'id': emprunt.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('emprunt_edit', { 'id': emprunt.id }) }}">Éditer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('emprunt_new') }}">Créer un nouvel emprunt</a>
        </li>
    </ul>
{% endblock %}
