{% extends 'base.html.twig' %}

{% block body %}
    <h1>Emprunt</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ emprunt.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if emprunt.date %}{{ emprunt.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
              <tr>
                <th>Livre</th>
                <td>{{ emprunt.livre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('emprunt_index') }}">Retourner à la liste</a>
        </li>
        <li>
            <a href="{{ path('emprunt_edit', { 'id': emprunt.id }) }}">Éditer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
