{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des étagères</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Numéro</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etagere in etageres %}
            <tr>
                <td><a href="{{ path('etagere_show', { 'id': etagere.id }) }}">{{ etagere.id }}</a></td>
                <td>{{ etagere.numero }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('etagere_show', { 'id': etagere.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('etagere_edit', { 'id': etagere.id }) }}">Éditer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('etagere_new') }}">Créer une nouvelle étagère</a>
        </li>
    </ul>
{% endblock %}
