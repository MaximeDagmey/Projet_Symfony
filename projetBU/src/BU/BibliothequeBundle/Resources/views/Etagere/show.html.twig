{% extends 'base.html.twig' %}

{% block body %}
    <h1>Etagère</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etagere.id }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ etagere.numero }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('etagere_index') }}">Retourner à la liste</a>
