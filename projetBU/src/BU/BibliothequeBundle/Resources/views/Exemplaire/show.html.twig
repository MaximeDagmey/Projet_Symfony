{% extends 'base.html.twig' %}

{% block body %}
    <h1>Exemplaire</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exemplaire.id }}</td>
            </tr>
            <tr>
                <th>Désignation</th>
                <td>{{ exemplaire.designation }}</td>
            </tr>
            <tr>
                <th>Livre</th>
                <td>{{ exemplaire.livreexemplaire }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('exemplaire_index') }}">Retourner à la liste</a>
        </li>
        <li>
            <a href="{{ path('exemplaire_edit', { 'id': exemplaire.id }) }}">Éditer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
